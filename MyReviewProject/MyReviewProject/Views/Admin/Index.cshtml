@using MyReviewProject.Models
@using Microsoft.AspNet.Identity
@model IEnumerable<ApplicationUser>

<head>
    @{
        ViewBag.Title = "Учетные записи пользователей";
    }
    <link rel="stylesheet" type="text/css" href="~/Content/AdminPanels.css" />
</head>

<div class="admin">
    <h2>Учетные записи пользователей</h2>
    <table>
        <tr>
            <th>Id</th>
            <th>Имя</th>
            <th>Email</th>
            <th></th>
        </tr>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="4" class="text-center">Нет ни одной учетной записи</td>
            </tr>
        }
        else
        {
            foreach (ApplicationUser user in Model)
            {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>               
                <td>
                    @Html.ActionLink("Изменить", "Edit", new { id = user.Id })
                    @Html.ActionLink("Удалить", "Delete", new { id = user.Id })
                    
                </td>
            </tr>
        }
    }
    </table>
    @Html.ActionLink("Роли", "Index", "Role")
    @Html.ActionLink("Назад","Index","Manage")
</div>

