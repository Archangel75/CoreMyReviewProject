@model MyReviewProject.Models.CreateRoleModel
<head>
    @{ ViewBag.Title = "Добавление роли";}
    @Styles.Render("~/Content/AdminPanels.css")
</head>
<body>

        @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="admin">


        <h2>Добавление роли</h2>
        <hr />
        @Html.ValidationSummary(true, "")
        <div class="row">
            <div class="col-sm-2">@Html.LabelFor(model => model.Name)</div>
            <div class="col-sm-5">@Html.TextBoxFor(model => model.Name, new { @class = "form-control" })</div>
        </div>
        <div class="row">
            <div class="col-sm-2">@Html.LabelFor(model => model.Description)</div>
            <div class="col-sm-5">@Html.TextBoxFor(model => model.Description, new { @class = "form-control" })</div>
        </div>

        <input type="submit" value="Добавить" />
        @Html.ActionLink("Отмена", "Index", null, new { @class = "btn btn-default" })

    </div>
}
</body>