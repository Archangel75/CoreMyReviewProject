@model MyReviewProject.Models.ApplicationUser
@Styles.Render("~Content/AdminPanels.css")
@{
    ViewBag.Title = "Редактирование пользователя";
}

@Html.ValidationSummary(false)
<div class="admin">
    <h2>Редактирование пользователя</h2>

    @using (Html.BeginForm())
    {
        @Html.HiddenFor(x => x.Id)
        <div class="row">
            <div class="col-sm-2">Логин :</div>
            <div class="col-sm-5">@Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })</div>
                    </div>
        <div class="row">
            <div class="col-sm-2">Емэйл :</div>
            <div class="col-sm-5"> @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })</div>
        </div>
        <div class="row">
            <div class="col-sm-2">Пароль : </div>
            <div class="col-sm-5"> <input name="password" type="password" class="form-control" /> </div>
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
        @Html.ActionLink("Отмена", "Index", null, new { @class = "btn btn-default" })
    }
</div>